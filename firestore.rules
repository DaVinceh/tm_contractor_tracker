rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isContractor() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'contractor';
    }
    
    function isSO() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'so';
    }
    
    function isExecutive() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'executive';
    }
    
    function isGMorAGM() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'gmAgm';
    }
    
    function isAdmin() {
      return isSO() || isExecutive() || isGMorAGM();
    }
    
    // Users collection
    match /users/{userId} {
      // Allow anyone to read and create users (for contractor login)
      allow read, create: if true;
      
      // Users can update their own data, or admins can update any
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Contractor teams collection
    match /contractor_teams/{teamId} {
      // Allow anyone to read teams (contractors don't use Firebase Auth)
      allow read: if true;
      
      // Only SO and above can create/update/delete teams
      allow create, update, delete: if isSO() || isExecutive() || isGMorAGM();
    }
    
    // Attendance collection
    match /attendance/{attendanceId} {
      // Allow anyone to read and create attendance (contractors need access)
      allow read, create: if true;
      
      // No updates or deletes to attendance records
      allow update, delete: if false;
    }
    
    // Tasks collection
    match /tasks/{taskId} {
      // Allow anyone to read tasks (contractors need access)
      allow read: if true;
      
      // Only SOs and above can create/update tasks
      allow create, update: if isSO() || isExecutive() || isGMorAGM();
      
      // Only executives and GM/AGM can delete tasks
      allow delete: if isExecutive() || isGMorAGM();
    }
    
    // Task updates collection
    match /task_updates/{updateId} {
      // Allow anyone to read task updates (contractors don't use Firebase Auth)
      allow read: if true;
      
      // Allow anyone to create updates (contractors use team-based auth)
      allow create: if true;
      
      // No updates or deletes to task updates
      allow update, delete: if false;
    }
  }
}
